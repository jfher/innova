<% if @user.errors.any? %>
<%= @user.errors.full_messanges.each do |msg| %>
   <li><%= msg %></li>
   <% end %>
<% end %>
<div class="panel panel-success">
  <div class="panel-heading">
    <h3 class="panel-title"></h3>
  </div>
  <div class="panel-body">
    <div class="container">

      	<form action="/user/save" method="post" class="form-horizontal" role="form">
         <div class="form-group">
          <label for="inputName3" class="col-sm-2 control-label">Nombre(s)</label>
          <div class="col-sm-7">
            <input type="text" class="textboxgrade" id="inputEmail3" placeholder="Nombre(s)" required="required" name="name" value="<%= @user.name %>">
          </div>
        </div>
        <div class="form-group">
          <label for="inputLastname3" class="col-sm-2 control-label">Apellidos</label>
          <div class="col-sm-7">
            <input type="text" class="textboxgrade" id="inputEmail3" placeholder="Apellidos" required="required" name="lastname" value="<%= @user.lastname %>">
          </div>
        </div>

        <div class="form-group">
          <label for="inputLastname3" class="col-sm-2 control-label">Telefono</label>
          <div class="col-sm-7">
            <input type="number" class="textboxgrade" id="inputEmail3" placeholder="Telefono" required="required" name="telf" value="<%= @user.telf %>">
          </div>
        </div>


        <div class="form-group">
          <label for="inputEmail3" class="col-sm-2 control-label">Email</label>
          <div class="col-sm-7">
            <input type="email" class="textboxgrade" id="inputEmail3" placeholder="Email" required="required" name="email" value="<%= @user.email %>">
          </div>
        </div>
        <div class="form-group">
          <label for="inputPassword3" class="col-sm-2 control-label">Password</label>
          <div class="col-sm-7">
            <input type="password" class="textboxgrade" id="inputPassword3" placeholder="Password" name="password" value ="<%= @user.password %>" required="required">
          </div>
        </div>

        <div class="form-group">
          <div class="col-sm-offset-2 col-sm-7">
        </div>
        </div>
        <div class="form-group">
          <div class="col-sm-offset-2 col-sm-7">
             <input type="submit" name="commit" value="Save" class="btn btn-success">
          </div>
        </div>
      </form>
    </div>
  </div>
</div>