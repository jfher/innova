<%= form_for(@event) do |f| %>
  <% if @event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% @event.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :name_of_sponsor %><br>
    <%= f.text_field :name_of_sponsor %>
  </div>
  <div class="field">
    <%= f.label :start_date %><br>
    <%= f.text_field :start_date %>
  </div>
  <div class="field">
    <%= f.label :end_date %><br>
    <%= f.text_field :end_date %>
  </div>
  <div class="field">
    <%= f.label :state %><br>
    <%= f.select :state, options_for_select([["Apertura"], ["Clausura"], ["Informativo"]]) %>
  </div>

  <div class="text_info">
    <%= f.label :'Por favor seleccione el concurso para el cual se realizara el evento'%><br>
    <%= f.collection_select(:contest_id, Contest.all, :id, :name, {:required => "required"}, :class => "textboxgrade" ) %>
  </div>  

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
